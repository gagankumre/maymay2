<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    tools:context="com.example.gagan.maymay_test1.Createfragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <Button
                android:id="@+id/postbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:background="#000000"
                android:text="Post meme"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ProgressBar
                    android:id="@+id/uploadprogressBar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:progressTint="#ffffff"
                    android:visibility="invisible"
                    tools:visibility="invisible" />

                <EditText
                    android:id="@+id/write"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:hint="write..."
                    android:inputType="textMultiLine"
                    android:paddingStart="15dp"
                    android:textAlignment="viewStart"
                    android:textColor="#ffffff"
                    android:textColorHint="#222222"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/memeuploadbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/write"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="10dp"
                    android:background="#000000"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/meme" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/memeuploadbtn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_marginTop="6dp"
                    android:background="#000000"
                    android:text="clear"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</RelativeLayout>
