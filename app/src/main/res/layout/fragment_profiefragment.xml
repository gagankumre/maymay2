<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.gagan.maymay_test1.Profiefragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarprofile"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/black"
                android:elevation="0dp"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:minHeight="250dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignBottom="@+id/toolbarprofile"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/fauna_one"
                android:gravity="center"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileview"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/toolbarprofile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:src="@drawable/profile"
                app:civ_border_color="#999999"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/nameview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="@string/name"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/emailview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:text="@string/email_address" />

            <ProgressBar
                android:id="@+id/progressBarprofile"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nameview"
                android:layout_alignStart="@+id/nameview"
                android:layout_marginBottom="38dp"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="3dp"
                android:background="#000000"
                android:src="@drawable/ic_settings_white_24dp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
